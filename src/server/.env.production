# -------------------------
# Production Environment Variables for www.inbola.uz
NODE_ENV=production
PORT=5000

# -------------------------
# Database (AWS RDS PostgreSQL)
DATABASE_URL="postgresql://inbola_user:STRONG_PASSWORD_HERE@inbola-db.cluster-xxxxx.us-east-1.rds.amazonaws.com:5432/inbola_production?schema=public"

# JWT Secrets (Generate strong secrets)
JWT_SECRET="your-super-strong-jwt-secret-for-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-strong-refresh-secret-for-production-min-32-chars"

# -------------------------
# SESSION & COOKIES
# -------------------------
SESSION_SECRET=your-super-secure-64-character-session-secret-key-here
COOKIE_DOMAIN=.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
COOKIE_SECRET=your-super-secure-64-character-cookie-secret-key-here

# -------------------------
# CLIENT URLS
# -------------------------
CLIENT_URL_PROD=https://yourdomain.com
CLIENT_URL_DEV=http://localhost:3000

# -------------------------
# STRIPE PAYMENT GATEWAY
# -------------------------
STRIPE_PUBLIC_KEY=pk_live_your_live_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_stripe_webhook_secret_here

# -------------------------
# CLOUDINARY
# -------------------------
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_name
CLOUDINARY_API_KEY=your_production_cloudinary_key
CLOUDINARY_API_SECRET=your_production_cloudinary_secret

# -------------------------
# EMAIL SMTP CONFIG
# -------------------------
EMAIL_USER=your-production-email@yourdomain.com
EMAIL_PASS=your-production-email-app-password

# -------------------------
# SOCIAL LOGIN (PRODUCTION)
# -------------------------
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CALLBACK_URL_PROD=https://yourdomain.com/api/v1/auth/google/callback

FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret
FACEBOOK_CALLBACK_URL_PROD=https://yourdomain.com/api/v1/auth/facebook/callback

TWITTER_CONSUMER_KEY=your_production_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_production_twitter_consumer_secret
TWITTER_CALLBACK_URL_PROD=https://yourdomain.com/api/v1/auth/twitter/callback

# -------------------------
# UZBEKISTAN PAYMENT SYSTEMS (PRODUCTION)
# -------------------------
CLICK_BASE_URL=https://api.click.uz/v2
CLICK_MERCHANT_ID=your_production_merchant_id
CLICK_SERVICE_ID=your_production_service_id
CLICK_SECRET_KEY=your_production_click_secret_key
CLICK_USER_ID=your_production_click_user_id

PAYME_BASE_URL=https://checkout.paycom.uz/api
PAYME_MERCHANT_ID=your_production_payme_merchant_id
PAYME_SECRET_KEY=your_production_payme_secret_key
PAYME_CALLBACK_URL=https://yourdomain.com/api/payments/webhook/payme

UZUM_BASE_URL=https://api.uzum.uz/api/v1
UZUM_MERCHANT_ID=your_production_uzum_merchant_id
UZUM_SECRET_KEY=your_production_uzum_secret_key
UZUM_SERVICE_ID=your_production_uzum_service_id
UZUM_CALLBACK_URL=https://yourdomain.com/api/payments/webhook/uzum

# -------------------------
# PAYMENT SETTINGS
# -------------------------
PAYMENT_SUCCESS_URL=https://yourdomain.com/payment/success
PAYMENT_FAILED_URL=https://yourdomain.com/payment/failed
PAYMENT_CANCEL_URL=https://yourdomain.com/payment/cancel
WEBHOOK_SECRET=your_production_webhook_secret_key
PAYMENT_EXPIRY_MINUTES=30
